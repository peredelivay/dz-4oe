#include <iostream>
#include <string>
using namespace std;

int main(){
	string m[31][51];                 //МАТРИЦА
	for (int i = 0; i < 31; i++){
		for (int j = 0; j < 51; i++){
			m[i][j] = " ";
		}
	}


	for (int i = 0; i < 51; i++)      //ОСЬ Х
	{
		m[15][i] = '-';
	}


	for (int i = 0; i < 31; i++)      // ОСЬ Y
	{
		m[i][25] = '|';
	}

	m[15][25] = "O";  // НАЧАЛО КООРДИНАТ

	for (int i = 0; i < 51; i++)	// РИСУЕМ ГРАФИК
	{
		for(int p = 0; p < 1; p++)
		{
			int j = abs(sin(i / 3.99) * 10);
			if (sin(i / 3.99) < 0)
			{
				j += 15 + p;
			}
			else
			{
				j = 15 - j - p;
			}
			m[j][i] = "*";

		}
	}

	for (int i = 0; i < 31; i++) {
		for (int j = 0; j < 51; j++)
		{
			cout << m[i][j] << " ";
		}
		cout << "\n";
	}
	return 0;
}
