#include <iostream>
#include <string>
#include <map>
#include <windows.h>
using namespace std;

int fromRoman(string n)
{
	map<char, int> m;
	m['I'] = 1;
	m['V'] = 5;
	m['X'] = 10;
	m['L'] = 50;
	m['C'] = 100;
	m['D'] = 500;
	m['M'] = 1000;

	int tmp = 0, res = 0, i = 1;

	for (char c : n)
	{
		int n = m[c];
		if (n < tmp)
		{
			res += tmp;
			tmp = n;
			i = 1;
		}
		else if (n > tmp)
		{
			if (tmp == 0)
				tmp = n;
			else
			{
				res += n - tmp;
				tmp = 0;
				i = 1;
			}
		}
		else if (n == tmp)
		{
			res += tmp + n;
			tmp = 0;
			i += 1;
		}
	}
	if (i > 2) {
		cout <<"Неверно..." << endl;
		system("pause");
	}
	else {
		return res + tmp;
	}
}

int main()
{
	SetConsoleCP(1251);
	SetConsoleOutputCP(1251);
	string name;
	cout << "Введите римское число: ";
	cin >> name;
	cout << fromRoman(name)<< endl;
}
